apiVersion: v1
kind: PersistentVolume
metadata:
    name: {{ pv.name }}
    {% if pv.labels is defined %}
        {%- with labels=pv.labels %}
            {%- include "teamplateChunks/label.j2" %}
        {%- endwith %}
    {%- endif %}
spec:
    storageClassName: manual
    capacity:
        storage: 1Gi
    accessModes:
        - ReadWriteOnce
    hostPath:
        path: "/opt/data"